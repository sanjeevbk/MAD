<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="60dp"
        android:layout_toStartOf="@+id/Show_count"
        android:layout_toLeftOf="@+id/Show_count"
        android:background="@color/colorPrimary"
        android:onClick="show_toast"
        android:text="@string/showtoast"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/Show_count"
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_below="@+id/button_show"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="19dp"
        android:background="#FFFF00"
        android:gravity="bottom|clip_horizontal|center|clip_vertical|center_horizontal|center_vertical"
        android:text="@string/_0"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"

        android:textSize="300sp"

        android:textStyle="bold" />

    <Button
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/Zero_show"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/Show_count"
        android:layout_toLeftOf="@+id/Show_count"

        android:background="@color/colorPrimary"
        android:onClick="showCount"
        android:text="@string/Count"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/Zero_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_show"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="60dp"
        android:layout_toStartOf="@+id/Show_count"
        android:layout_toLeftOf="@+id/Show_count"
        android:background="@color/colorPrimary"
        android:onClick="reset"
        android:text="@string/Zero"
        android:textColor="#FFFFFFFF" />

</RelativeLayout>